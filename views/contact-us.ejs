            min-height: 100vh;
            color: #1e1b4b;
            position: relative;
            overflow-x: hidden;
        }
        
        /* Background Elements */
        .bg-pattern {
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            z-index: -2;
            background: linear-gradient(45deg, #da9fbf 0%, #c3abfc 50%, #fae8ff 100%);
