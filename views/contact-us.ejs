            position: relative;
            overflow: hidden;
        }
        
        .contact-card:hover {
            transform: translateY(-8px);
        }
        
        .contact-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 4px;
            background: linear-gradient(90deg, #ec4899, #a855f7, #6366f1);
            transform: translateX(-100%);
            transition: transform 0.6s ease;
