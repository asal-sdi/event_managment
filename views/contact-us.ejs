        /* Floating Small 3D Spheres */
        .small-sphere {
            position: fixed;
            border-radius: 50%;
            z-index: -1;
            filter: blur(15px);
            animation: floatSphere 25s infinite ease-in-out;
        }
        
        /* Sphere Colors */
        .sphere-pink-1 {
            width: 120px;
            height: 120px;
            background: radial-gradient(circle at 30% 30%, #b72870, #c03e78);
            opacity: 0.15;
            top: 10%;
            right: 10%;
            animation-duration: 25s;
        }
        
        .sphere-purple-1 {
            width: 100px;
            height: 100px;
            background: radial-gradient(circle at 40% 40%, #b98ce2, #8b5cf6);
            opacity: 0.12;
            top: 60%;
            left: 15%;
            animation-duration: 30s;
        }
        
        .sphere-blue-1 {
            width: 80px;
            height: 80px;
            background: radial-gradient(circle at 20% 80%, #7779fb, #4f46e5);
            opacity: 0.1;
            bottom: 20%;
            right: 20%;
            animation-duration: 20s;
        }
        
        /* Floating Animation */
        @keyframes floatSphere {
            0%, 100% {
                transform: translate(0, 0) scale(1);
            }
            25% {
                transform: translate(40px, 20px) scale(1.1);
            }
            50% {
                transform: translate(20px, 40px) scale(0.9);
            }
            75% {
