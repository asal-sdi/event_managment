    <!-- JavaScript -->
    <script>
        // داده‌های درخواست‌ها
        const requestsData = {
            1: {
                id: "REQ-001",
                organization: "شرکت فناوری ایرانیان",
                contact: "۰۹۱۲۳۴۵۶۷۸۹",
                email: "info@tech-iranian.ir",
                location: "مرکز همایش‌های بین‌المللی تهران",
                address: "تهران، خیابان ولیعصر",
                capacity: "۵۰۰ نفر",
                date: "۱۴۰۳/۰۴/۱۵",
                time: "۱۰:۰۰ - ۱۸:۰۰",
                type: "کنفرانس",
                description: "درخواست برگزاری کنفرانس سالیانه فناوری با حضور ۳۰۰ نفر از متخصصان صنعت. شامل ۵ سخنرانی کلیدی، ۳ کارگاه آموزشی و نمایشگاه جانبی.",
                requirements: ["سیستم صوتی پیشرفته", "ویدئو پروژکتور HD", "اینترنت پرسرعت", "سالن غذاخوری", "پارکینگ اختصاصی"],
                status: "pending",
                timeline: [
                    { date: "۱۴۰۳/۰۲/۱۰", action: "ثبت درخواست", description: "درخواست توسط شرکت فناوری ایرانیان ثبت شد" },
                    { date: "۱۴۰۳/۰۲/۱۲", action: "بررسی اولیه", description: "بررسی مدارک تکمیل شد" }
                ]
            },
            2: {
                id: "REQ-002",
                organization: "دانشگاه صنعتی شریف",
                contact: "۰۲۱-۶۶۰۰۰۰۰۰",
                email: "events@sharif.edu",
                location: "سالن همایش‌های دانشکده مهندسی",
                address: "تهران، خیابان آزادی",
                capacity: "۲۰۰ نفر",
                date: "۱۴۰۳/۰۵/۲۰",
                time: "۰۹:۰۰ - ۱۶:۰۰",
                type: "سمینار",
                description: "سمینار تخصصی هوش مصنوعی و کاربردهای آن در صنعت با حضور اساتید و دانشجویان دانشگاه.",
                requirements: ["ویدئو پروژکتور", "سیستم صوتی", "اینترنت", "ناهار"],
                status: "approved",
                timeline: [
                    { date: "۱۴۰۳/۰۱/۲۵", action: "ثبت درخواست", description: "درخواست توسط دانشگاه شریف ثبت شد" },
                    { date: "۱۴۰۳/۰۲/۰۱", action: "بررسی مدارک", description: "مدارک مورد نیاز دریافت شد" },
                    { date: "۱۴۰۳/۰۲/۱۰", action: "تایید نهایی", description: "درخواست توسط مدیر سیستم تایید شد" }
                ]
            }
        };

        let currentFilter = 'all';
        let currentModalRequest = null;

        // فیلتر کردن درخواست‌ها
        function filterRequests(filter) {
            currentFilter = filter;
            
            // Update filter chips
            document.querySelectorAll('.filter-chip').forEach(chip => {
                chip.classList.remove('active');
            });
            event.target.classList.add('active');
            
            // Filter requests
            searchRequests();
        }

        // جستجوی درخواست‌ها
        function searchRequests() {
            const searchTerm = document.getElementById('searchInput').value.toLowerCase();
            const requests = document.querySelectorAll('#requests-container > div');
            
            requests.forEach(request => {
                const searchData = request.getAttribute('data-search');
                const status = request.getAttribute('data-status');
                
                const matchesSearch = searchData.includes(searchTerm);
                const matchesFilter = currentFilter === 'all' || status === currentFilter;
                
                if (matchesSearch && matchesFilter) {
                    request.style.display = 'flex';
                } else {
                    request.style.display = 'none';
                }
            });
        }

        // مشاهده جزئیات درخواست
        function viewRequestDetails(requestId) {
            currentModalRequest = requestId;
            const request = requestsData[requestId];
            
            if (!request) return;
            
            // پر کردن اطلاعات مودال
            document.getElementById('modalTitle').textContent = `درخواست ${request.id}`;
            document.getElementById('modalId').textContent = `#${request.id}`;
            document.getElementById('modalOrganization').textContent = request.organization;
            document.getElementById('modalContact').textContent = request.contact;
            document.getElementById('modalEmail').textContent = request.email;
            document.getElementById('modalLocation').textContent = request.location;
            document.getElementById('modalAddress').textContent = request.address;
            document.getElementById('modalCapacity').textContent = request.capacity;
            document.getElementById('modalDate').textContent = request.date;
            document.getElementById('modalTime').textContent = request.time;
            document.getElementById('modalType').textContent = request.type;
            document.getElementById('modalDescription').textContent = request.description;
            
            // بروزرسانی وضعیت
            const statusBadge = document.getElementById('modalStatus');
            statusBadge.className = `status-badge status-${request.status}`;
            statusBadge.innerHTML = request.status === 'pending' ? '<i class="fas fa-clock"></i> در انتظار' :
                                   request.status === 'approved' ? '<i class="fas fa-check-circle"></i> تایید شده' :
                                   '<i class="fas fa-times-circle"></i> رد شده';
            
            // اضافه کردن نیازمندی‌ها
            const requirementsContainer = document.getElementById('modalRequirements');
            requirementsContainer.innerHTML = '';
            request.requirements.forEach(req => {
                const span = document.createElement('span');
                span.className = 'px-3 py-1 bg-gradient-to-r from-pink-100 to-purple-100 text-pink-700 rounded-full text-sm';
                span.textContent = req;
                requirementsContainer.appendChild(span);
            });
            
            // اضافه کردن timeline
            const timelineContainer = document.getElementById('modalTimeline');
            timelineContainer.innerHTML = '';
            request.timeline.forEach((item, index) => {
                const timelineItem = document.createElement('div');
                timelineItem.className = 'timeline-item';
                timelineItem.innerHTML = `
                    <div class="timeline-dot"></div>
                    <div class="bg-white p-4 rounded-xl shadow-sm">
                        <div class="flex justify-between items-start mb-2">
                            <div class="font-bold text-pink-900">${item.action}</div>
                            <div class="text-sm text-pink-500">${item.date}</div>
                        </div>
                        <p class="text-pink-700 text-sm">${item.description}</p>
                    </div>
                `;
                timelineContainer.appendChild(timelineItem);
            });
            
            // نمایش مودال
            document.getElementById('requestModal').classList.add('active');
        }

        // بستن مودال
        function closeModal() {
            document.getElementById('requestModal').classList.remove('active');
            currentModalRequest = null;
        }

        // تایید درخواست
        function approveRequest(requestId) {
            if (confirm('آیا از تایید این درخواست اطمینان دارید؟')) {
                showNotification(`درخواست ${requestId} با موفقیت تایید شد`, 'success');
                // در حالت واقعی درخواست به API ارسال می‌شود
            }
        }

        function approveModalRequest() {
            if (currentModalRequest) {
                approveRequest(currentModalRequest);
                closeModal();
            }
        }

        // رد درخواست
        function rejectRequest(requestId) {
            const reason = prompt('لطفاً دلیل رد درخواست را وارد کنید:');
            if (reason) {
                showNotification(`درخواست ${requestId} به دلیل "${reason}" رد شد`, 'error');
                // در حالت واقعی درخواست به API ارسال می‌شود
            }
        }

        function rejectModalRequest() {
            if (currentModalRequest) {
                rejectRequest(currentModalRequest);
                closeModal();
            }
        }

        // مشاهده قرارداد
        function viewContract(requestId) {
            showNotification(`قرارداد درخواست ${requestId} در حال بارگذاری...`, 'info');
            setTimeout(() => {
                showNotification('قرارداد با موفقیت بارگذاری شد', 'success');
            }, 1500);
        }

        // ارسال مجدد درخواست
        function resubmitRequest(requestId) {
            showNotification(`درخواست ${requestId} برای ارسال مجدد آماده شد`, 'info');
        }

        // مشاهده گزارش
        function viewReport(requestId) {
            showNotification(`گزارش درخواست ${requestId} در حال آماده‌سازی...`, 'info');
        }

        // خروجی گرفتن
        function exportRequests() {
            showNotification('گزارش درخواست‌ها در حال آماده‌سازی...', 'info');
            setTimeout(() => {
                showNotification('گزارش با فرمت Excel دانلود شد', 'success');
            }, 2000);
        }

        // بروزرسانی
        function refreshRequests() {
            showNotification('در حال بروزرسانی درخواست‌ها...', 'info');
            setTimeout(() => {
                showNotification('درخواست‌ها با موفقیت بروزرسانی شدند', 'success');
            }, 1000);
        }

        // نمایش نوتیفیکیشن
        function showNotification(message, type = 'info') {
            // حذف نوتیفیکیشن قبلی
            const existing = document.querySelector('.notification');
            if (existing) existing.remove();
            
            const notification = document.createElement('div');
            notification.className = `fixed top-6 left-6 z-50 p-4 rounded-xl border backdrop-blur-lg ${
                type === 'success' ? 'bg-gradient-to-r from-green-50 to-emerald-50 border-green-200 text-green-800' :
                type === 'error' ? 'bg-gradient-to-r from-red-50 to-rose-50 border-red-200 text-red-800' :
                'bg-gradient-to-r from-pink-50 to-purple-50 border-pink-200 text-pink-800'
            }`;
            notification.innerHTML = `
                <div class="flex items-center gap-3">
                    <i class="fas fa-${type === 'success' ? 'check-circle text-green-500' : type === 'error' ? 'exclamation-circle text-red-500' : 'info-circle text-pink-500'} text-xl"></i>
                    <span class="font-medium">${message}</span>
                </div>
            `;
            
            notification.classList.add('notification');
            document.body.appendChild(notification);
            
            setTimeout(() => notification.remove(), 3000);
        }

        // Event Listeners
        document.addEventListener('DOMContentLoaded', function() {
            // بستن مودال با کلیک خارج
            document.getElementById('requestModal').addEventListener('click', function(e) {
                if (e.target === this) {
                    closeModal();
                }
            });
            
            // بستن مودال با ESC
            document.addEventListener('keydown', function(e) {
                if (e.key === 'Escape') {
                    closeModal();
                }
            });
        });
    </script>
