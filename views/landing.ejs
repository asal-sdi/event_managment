   <section
  id="home"
  dir="rtl"
  class="relative min-h-screen flex items-center justify-center overflow-hidden pt-20
         bg-gradient-to-l from-purple-200 via-pink-100 to-indigo-200"
  style="font-family: 'Yekan', sans-serif"
>
  <!-- Background -->
  <div class="absolute inset-0 -z-10 bg-gradient-to-bl
              from-pink-50 via-purple-50 to-indigo-50 opacity-50"></div>

  <!-- Decorative blob -->
  <div class="absolute w-80 h-80 rounded-full bg-purple-100/30
              bottom-32 -right-32 animate-pulse"></div>

  <div class="container mx-auto px-4 lg:px-8 py-20">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">

      <!-- RIGHT CONTENT -->
      <div id="hero-text" class="text-right">

        <!-- Badge -->
        <div class="inline-flex items-center gap-2 bg-white/80
                    rounded-full px-4 py-2 mb-6 ml-auto
                    border shadow-lg backdrop-blur">
          <span class="text-sm text-gray-700">برترین سرویس برگزاری رویداد</span>
          <i data-feather="star" class="w-4 h-4 text-yellow-500"></i>
        </div>

        <!-- Title -->
        <h1 class="text-4xl sm:text-5xl lg:text-7xl font-bold mb-6 text-gray-900">
          خلق تجربیات
          <span class="bg-gradient-to-l from-pink-500 via-purple-500 to-indigo-500
                       bg-clip-text text-transparent">
            فراموش‌نشدنی
          </span>
        </h1>

        <!-- Subtitle -->
        <p class="text-lg sm:text-xl text-gray-700 max-w-2xl mb-10 leading-relaxed">
          برنامه‌ریزی، کشف و لذت بردن از رویدادها در یک مکان...
        </p>

        <!-- Features -->
        <div class="grid grid-cols-1 sm:grid-cols-2 gap-4 mb-12">
          <% [
            "طراحی سفارشی رویداد",
            "انتخاب و رزرو محل برگزاری",
            "تدارکات پذیرایی و دکوراسیون",
            "برنامه‌ریزی سرگرمی و برنامه‌ها"
          ].forEach(item => { %>

            <div class="flex flex-row-reverse items-center gap-3">
              <i data-feather="check-circle" class="text-green-500 w-5 h-5"></i>
              <span class="text-gray-700"><%= item %></span>
            </div>

          <% }) %>
        </div>

        <!-- CTA -->
        <div class="flex flex-col sm:flex-row-reverse gap-4 mb-16">
          <a href="/events/create"
             class="bg-gradient-to-l from-pink-500 via-purple-500 to-indigo-500
                    text-white px-8 py-4 rounded-lg shadow-lg
                    hover:scale-105 transition flex items-center gap-2">
            <i data-feather="chevron-left"></i>
            برنامه‌ریزی رویداد شما
          </a>

          <a href="/portfolio"
             class="bg-white/90 border px-8 py-4 rounded-lg
                    hover:shadow-xl transition flex items-center gap-2">
            <i data-feather="chevron-left"></i>
            مشاهده نمونه کارها
          </a>
        </div>

        <!-- Stats -->
        <div class="grid grid-cols-1 sm:grid-cols-3 gap-6 max-w-2xl ml-auto">
          <% [
            { icon: "calendar", value: "۵۰۰+", label: "رویداد برگزار شده" },
            { icon: "users", value: "۵۰هزار+", label: "شرکت‌کننده خوشحال" },
            { icon: "map-pin", value: "۱۰۰+", label: "محل برگزاری" }
          ].forEach(stat => { %>

            <div class="bg-white/90 rounded-2xl p-6 shadow-lg text-right">
              <i data-feather="<%= stat.icon %>" class="text-pink-500 mb-3 ml-auto"></i>
              <div class="text-3xl font-bold bg-gradient-to-l
                          from-pink-500 via-purple-500 to-indigo-500
                          bg-clip-text text-transparent">
                <%= stat.value %>
              </div>
              <div class="text-sm text-gray-700"><%= stat.label %></div>
            </div>

          <% }) %>
        </div>
      </div>

      <!-- LEFT VISUAL -->
      <div id="hero-visual" class="relative h-[500px] lg:h-[600px]">
        <div class="absolute inset-0 flex items-center justify-center">
          <div class="w-72 h-72 rounded-[40%]
                      bg-gradient-to-r from-pink-500/40 via-purple-500/40 to-indigo-500/40
