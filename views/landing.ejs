<section
  id="events"
  dir="rtl"
  class="relative overflow-hidden pt-16 pb-20 bg-gradient-to-l from-purple-200 via-pink-100 to-indigo-200"
  style="font-family: 'Yekan','Lotus',sans-serif"
>
  <!-- Background -->
  <div class="absolute inset-0 -z-10 bg-gradient-to-bl from-pink-50 via-purple-50 to-indigo-50 opacity-50"></div>

  <div class="container mx-auto px-4 sm:px-6 lg:px-8 relative z-20">

    <!-- Header -->
    <div id="events-header" class="text-center max-w-3xl mx-auto mb-12">
      <h2 class="text-3xl sm:text-4xl lg:text-5xl font-bold mb-3 text-gray-900">
        کشف
        <span class="bg-gradient-to-l from-pink-500 via-purple-500 to-indigo-500 bg-clip-text text-transparent">
          رویدادهای شگفت‌انگیز
        </span>
      </h2>
      <p class="text-gray-700 text-base sm:text-lg max-w-2xl mx-auto">
        رویدادهای پیش‌رو را بررسی کنید و تجربه‌هایی پیدا کنید که الهام‌بخش شما باشند.
      </p>
    </div>

    <!-- Grid -->
    <div id="events-grid" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mb-12">

      <% events.forEach(event => { %>
        <div class="event-card group relative rounded-xl overflow-hidden cursor-pointer bg-white/90 backdrop-blur-sm shadow-lg hover:shadow-xl transition-all duration-300 border border-white/50">

          <!-- Image -->
          <div class="relative h-40 overflow-hidden">
            <img
              src="<%= event.image %>"
              alt="<%= event.title %>"
              class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-500"
            />
            <div class="absolute inset-0 bg-gradient-to-t from-black/15 to-transparent"></div>

            <span class="absolute top-2 right-2 px-2 py-1 rounded-full text-xs font-semibold <%= event.categoryColor %> backdrop-blur-sm border border-white/30">
              <%= event.category %>
            </span>
          </div>

          <!-- Content -->
          <div class="p-4 text-right">
            <h3 class="text-base font-bold mb-2 text-gray-900 group-hover:text-transparent group-hover:bg-gradient-to-l group-hover:from-pink-500 group-hover:via-purple-500 group-hover:to-indigo-500 group-hover:bg-clip-text transition-all line-clamp-1">
              <%= event.title %>
            </h3>

            <div class="space-y-1.5 mb-3 text-gray-600 text-xs">
              <div class="flex items-center gap-2 justify-end">
                <i data-feather="calendar" class="w-3 h-3 text-pink-500"></i>
                <span><%= event.date %></span>
              </div>
              <div class="flex items-center gap-2 justify-end">
                <i data-feather="map-pin" class="w-3 h-3 text-purple-500"></i>
                <span><%= event.location %></span>
              </div>
            </div>

            <button class="flex items-center justify-between w-full group/btn">
              <span class="text-xs font-semibold bg-gradient-to-l from-pink-500 via-purple-500 to-indigo-500 bg-clip-text text-transparent">
                مشاهده جزئیات
              </span>
              <div class="w-6 h-6 rounded-full bg-gradient-to-l from-pink-500 via-purple-500 to-indigo-500 flex items-center justify-center group-hover/btn:scale-110 transition-transform">
                <i data-feather="arrow-right" class="w-3 h-3 text-white"></i>
              </div>
            </button>
          </div>

        </div>
      <% }) %>

    </div>

    <!-- View All -->
    <div class="text-center">
      <button class="relative inline-flex items-center gap-2 px-5 py-2.5 text-sm font-semibold rounded-lg overflow-hidden">
        <span class="absolute inset-0 bg-gradient-to-l from-pink-500 via-purple-500 to-indigo-500"></span>
        <span class="relative z-10 text-white flex items-center gap-2">
          <i data-feather="eye" class="w-4 h-4"></i>
          مشاهده همه رویدادها
          <i data-feather="arrow-right" class="w-4 h-4"></i>
        </span>
      </button>
    </div>

  </div>
</section>




<section dir="rtl" class="relative overflow-hidden pt-16 pb-20 bg-gradient-to-l from-purple-200 via-pink-100 to-indigo-200" style="font-family: 'Yekan', 'Lotus', sans-serif;">
  <!-- Background overlay -->
  <div class="absolute inset-0 -z-10 bg-gradient-to-bl from-pink-50 via-purple-50 to-indigo-50 opacity-50"></div>

  <div class="max-w-7xl mx-auto px-6 relative z-20">
    <!-- Section Header -->
    <div id="features-header" class="text-center max-w-3xl mx-auto mb-12 opacity-0 translate-y-10">
      <h2 class="text-3xl sm:text-4xl lg:text-5xl font-bold mb-3 text-gray-900 leading-tight">
        <span class="bg-gradient-to-l from-pink-500 via-purple-500 to-indigo-500 bg-clip-text text-transparent">
          امکانات کامل
        </span> برای رویدادهای شما
      </h2>
      <p class="text-gray-700 text-base sm:text-lg max-w-2xl mx-auto">
        همه چیزهایی که برای سازماندهی، مدیریت و لذت بردن از رویدادهای موفق به آن نیاز دارید.
      </p>
    </div>

    <!-- Features Grid -->
    <div id="features-grid" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mb-12">
      <% const features = [
        { icon: 'FiCalendar', title: "برنامه‌ریزی آسان", description: "با برنامه‌ریز ساده و قابل‌فهم ما رویدادهای خود را به راحتی برنامه‌ریزی کنید." },
        { icon: 'FiMapPin', title: "مدیریت مکان‌ها", description: "چندین مکان و سالن را در یکجا مدیریت کنید." },
        { icon: 'FiUsers', title: "پیگیری شرکت‌کنندگان", description: "به راحتی حضور و RSVP شرکت‌کنندگان را مدیریت کنید." },
        { icon: 'FiMusic', title: "امکانات سرگرمی", description: "از بین خدمات مختلف سرگرمی برای رویداد خود انتخاب کنید." },
        { icon: 'FiCamera', title: "پوشش رسانه‌ای", description: "لحظات خود را با امکانات عکس و ویدئو ثبت کنید." },
        { icon: 'FiCoffee', title: "خدمات پذیرایی", description: "سرو غذا و نوشیدنی را برای انواع رویدادها سازماندهی کنید." }
      ]; %>

      <% features.forEach(function(feature, index) { %>
        <div class="group relative rounded-xl overflow-hidden cursor-pointer bg-white/90 backdrop-blur-sm shadow-lg hover:shadow-xl transition-all duration-300 border border-white/50 opacity-0 translate-y-6" data-index="<%= index %>">
          <div class="p-6 text-center">
            <div class="w-14 h-14 rounded-full bg-gradient-to-l from-pink-500 via-purple-500 to-indigo-500 flex items-center justify-center mx-auto mb-4 transition-transform duration-300 group-hover:scale-110">
              <i data-feather="<%= feature.icon.replace('Fi','').toLowerCase() %>" class="text-white w-6 h-6"></i>
            </div>
            <h3 class="text-xl font-semibold mb-3 text-gray-900 group-hover:text-transparent group-hover:bg-gradient-to-l group-hover:from-pink-500 group-hover:via-purple-500 group-hover:to-indigo-500 group-hover:bg-clip-text transition-all duration-300">
              <%= feature.title %>
            </h3>
            <p class="text-gray-600 text-sm leading-relaxed"><%= feature.description %></p>
          </div>
        </div>
      <% }); %>
    </div>

    <!-- CTA Button -->
    <div id="features-cta" class="text-center opacity-0 translate-y-10">
      <button id="discover-btn" class="group relative inline-flex items-center justify-center gap-2 px-5 py-2.5 text-sm font-semibold rounded-lg overflow-hidden transition-all duration-300">
        <span class="absolute inset-0 bg-gradient-to-l from-pink-500 via-purple-500 to-indigo-500"></span>
        <span class="relative z-10 text-white flex items-center gap-2">
          <i data-feather="eye" class="w-3.5 h-3.5 transition-transform group-hover:rotate-12"></i>
          کشف امکانات بیشتر
          <i data-feather="arrow-right" class="w-3.5 h-3.5 transition-transform group-hover:translate-x-1"></i>
        </span>
      </button>
    </div>
  </div>

  <!-- GSAP & Feather Scripts -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.14.0/gsap.min.js"></script>
  <script src="https://unpkg.com/feather-icons"></script>
  <script>
    feather.replace();

    gsap.to("#features-header", {
      opacity: 1,
      y: 0,
      duration: 0.6,
      ease: "power3.out"
    });

    gsap.utils.toArray("#features-grid > div").forEach((card, i) => {
      gsap.to(card, {
        opacity: 1,
        y: 0,
        duration: 0.6,
        delay: i * 0.1,
        ease: "power3.out"
      });
    });

    gsap.to("#features-cta", {
      opacity: 1,
      y: 0,
      duration: 0.6,
      delay: 0.7,
      ease: "power3.out"
    });
  </script>
</section>


<script>
  feather.replace();

  gsap.from("#hero-text > *", {
    opacity: 0,
    y: 30,
    duration: 0.8,
    stagger: 0.15,
    ease: "power3.out"
  });

  gsap.from("#hero-visual", {
    opacity: 0,
    x: 40,
    duration: 1,
    delay: 0.3
  });
</script>

<script>
  feather.replace();

  gsap.registerPlugin(ScrollTrigger);

  gsap.from("#events-header", {
    scrollTrigger: {
      trigger: "#events",
      start: "top 80%"
    },
    opacity: 0,
    y: 20,
    duration: 0.6,
    ease: "power2.out"
  });

  gsap.from(".event-card", {
    scrollTrigger: {
      trigger: "#events-grid",
      start: "top 85%"
    },
    opacity: 0,
    y: 25,
    stagger: 0.12,
    duration: 0.6,
    ease: "power3.out"
  });
</script>


  </body>
