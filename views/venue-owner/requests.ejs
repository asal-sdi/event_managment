            requests.forEach(r => {
                if (r.revenue) {
                    // اگر revenue عدد است، مستقیماً استفاده کن
                    if (typeof r.revenue === 'number') {
                        revenue += r.revenue;
                    } else if (typeof r.revenue === 'string') {
                        // اگر رشته است، کاماها را حذف کن
                        const cleanRevenue = parseInt(r.revenue.replace(/,/g, ''));
                        if (!isNaN(cleanRevenue)) {
                            revenue += cleanRevenue;
                        }
                    }
                }
            });
            
